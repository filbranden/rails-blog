<p id="notice"><%= notice %></p>

<h2><%= link_to @post.title, @post %></h2>
<p><i><%= friendly_date @post.created_at %></i></p>
<p><%= @post.body %></p>

<p><%= link_to 'Edit', edit_post_path(@post) %> |
   <%= link_to 'Back', posts_path %></p>

<h3>Comments:</h3>

<%= render @post.comments %>

<h4>New comment</h4>

<%= form_for [@post, @post.comments.build] do |f| %>
  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
